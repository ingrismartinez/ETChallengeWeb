@{
    ViewData["Title"] = "Home Page";
}

@model UserCurrentBudgetModel

    <div class="text-center">
        <h1 class="display-4">Welcome Ingris!</h1>
        <h3 class="display-3">Expenses Tracker ChallengeApp</h3>
        @if(Model.IsProposedBudget)
        {
    <form class="align-content-center">
        <div class="form-row ">
            <div class="form-group col-md-4 ">
                <label for="inputBudgetName4">@Model.Budget.Name</label>
                <input type="text" hidden="hidden" class="form-control" id="inputBudgetName4" placeholder="Budget Name">
            </div>
            <div class="form-row col-md-4">
                <div class="col">
                    <label for="inputcurrencyBudget5">@Model.Budget.Currency</label>
                    <input type="text" hidden="hidden" class="form-control" id="inputcurrencyBudget5">
                </div>
                <div>
                    <label hidden="hidden" for="inputTotalBudgetAmount6">@Model.Budget.Amount</label>
                    <input type="number" class="form-control" id="inputTotalBudgetAmount6" placeholder="TotalBudgetAmount">
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>

    </form>
        }
        

    </div>
