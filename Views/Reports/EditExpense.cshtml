@model ETChallengeWeb.Controllers.ExpenseDto

@{
    ViewData["Title"] = "EditExpense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditExpense</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpenseId" hidden="hidden" class="control-label"></label>
                <input asp-for="ExpenseId" hidden="hidden" class="form-control" />
                <span asp-validation-for="ExpenseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpendedValue" class="control-label"></label>
                <input asp-for="ExpendedValue" class="form-control" />
                <span asp-validation-for="ExpendedValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionDate" class="control-label"></label>
                <input asp-for="TransactionDate" type="date" class="form-control" />
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" hidden="hidden" class="control-label"></label>
                <input asp-for="UserId" hidden="hidden" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit"  asp-controller="Reports" 
                                asp-action="Save" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
